@model List<CuriousDriveWebClient.UserQuestionViewModel>;

<div class="col-md-12 col-xs-12">
    <br />
</div>

@using (Html.BeginForm("UserQuestionList", "Question", FormMethod.Post, new { role = "form" }))
{
    <div class="col-md-12">
        <span style="font-weight:bolder;font-size:x-large">Questions</span>
        <hr />
    </div>

    if (Model.Count > 0)
    {
        for (int i = 0; i < Model.Count; i++)
        {
        <div class="col-md-12 hover_effect">
            <div class="col-md-12">
                @Html.ActionLink(Model[i].questionTitle, "Question", "Question",
                                                  new
                                                  {
                                                      id = Model[i].questionId,
                                                      title = Model[i].questionTitleURL
                                                  }, new { @class = "bold-main-link" })
                <br />
                asked on @String.Format("{0:MMM d, yyyy}", Convert.ToDateTime(Model[i].createdDate))
            </div>
        </div>
            
        }
    }
    else
    {
        <div class="col-md-12">
            <span>
                There are no questions to show
            </span>
        </div>
    }

}

