@model List<CuriousDriveWebClient.UserCommentViewModel>

<div class="col-md-12 col-xs-12">
    <br />
</div>

@using (Html.BeginForm("UserCommentsList", "Question", FormMethod.Post, new { role = "form" }))
{
    <div class="col-md-12">
        <span style="font-weight:bolder;font-size:x-large">Comments</span>
        <hr />
    </div>

    if (Model.Count > 0)
    {
        for (int i = 0; i < Model.Count; i++)
        {

            <div class="col-md-12 hover_effect">
                <div class="col-md-12">
                    @Html.ActionLink(Model[i].questionTitle,"Question" ,"Question",
                                                         new
                                                         {
                                                             id = Model[i].questionId,
                                                             title = Model[i].questionTitleURL
                                                         }, new { @class = "bold-main-link" })
                    <br />
                    @Model[i].commentHtml
                </div>
            </div>

        }
    }
    else
    {
        <div class="col-md-12">
            <span>
                There are no comments to show
            </span>
        </div>
    }
}

