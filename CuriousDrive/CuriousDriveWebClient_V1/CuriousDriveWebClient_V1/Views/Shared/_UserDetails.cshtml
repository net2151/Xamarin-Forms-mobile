@model CuriousDriveWebClient.UserDetailsViewModel;

<div class="row">
    <div class="col-lg-2 d-none d-md-block">
        @await Html.PartialAsync("_ProfilePicture", Model.profilePictureViewModel)@*new ProfilePicture(Model.idoUser.pictureUrl, Model.idoUser.networkValue, 40, 40))*@

    </div>
    <div class="col-lg-12 d-none d-md-block">
        @Html.ActionLink(Model.displayName, "UserProfile", "UserProfile", new { id = Model.userId, title = Model.urlTitle }, new { @class = "" })
    </div>
</div>

