    <div class="col-3 d-md-none d-block">
        @await Html.PartialAsync("_ProfilePicture", Model.profilePictureViewModel)@*new ProfilePicture(Model.idoUser.pictureUrl, Model.idoUser.networkValue, 20, 20))*@
    </div>
    <div class="col-lg-9 col-xl-9 col-md-9 col-9">

    </div>
