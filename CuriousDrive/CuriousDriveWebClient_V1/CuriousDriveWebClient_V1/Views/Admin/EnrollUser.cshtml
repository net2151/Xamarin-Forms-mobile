@model CuriousDriveWebClient.EnrollUserViewModel;

@{
    ViewBag.Title = "Enroll a user - Curious Drive";
}

@using (Html.BeginForm("EnrollUser", "Admin", FormMethod.Post, new { @class = "form-horizontal row form-group card", role = "form" }))
{
    @Html.AntiForgeryToken()

    <form name="enrollUserForm" class="form-horizontal" role="form" novalidate>
        <div class="col-lg-12 col-12">
            <br />
        </div>

        <div class="col-lg-12 col-12">
            <p class="bold-largest">Enroll a User</p>
            <p>
                You can enroll members in your community by submitting their info below. Please select their Role and User Group to give them appropriate authorization.
                Once the information submitted sucessfully in the system, then user will receive an email to verify their account.
                <br />
                User will have to verify their account to log in into Curious Drive
            </p>
            <hr />
        </div>

        <div class="col-lg-6 col-lg-6 col-sm-12 col-12">
            @Html.TextBoxFor(m => m.firstName, new { placeholder = "first name", @class = "form-control" })
        </div>

        <div class="col-lg-12 col-lg-12 col-sm-12 col-12">
            <br />
        </div>

        <div class="col-lg-6 col-lg-6 col-sm-12 col-12">
            @Html.TextBoxFor(m => m.lastName, new { placeholder = "last name", @class = "form-control" })
        </div>

        <div class="col-lg-12 col-lg-12 col-sm-12 col-12">
            <br />
        </div>

        <div class="col-lg-6 col-lg-6 col-sm-12 col-12">
            @Html.TextBoxFor(m => m.emailAddress, new { placeholder = "email", @class = "form-control" })
        </div>

        <div class="col-lg-12 col-lg-12 col-sm-12 col-12">
            <br />
        </div>

        <div class="col-lg-6 col-lg-6 col-sm-12 col-12">   
            @*@Html.DropDownListFor(m => m.istrRoleValue,
                                    roles.Select(x => new SelectListItem { Text = x.idoCodeValue.description, Value = x.idoCodeValue.codeValue }),
                                    "Select a role",
                                    new { @class = "form-control", @id = "dropdownRole" })*@
        </div>

        <div class="col-lg-12 col-lg-12 col-sm-12 col-12">
            <br />
        </div>

        <div class="col-lg-10">
            <button id="signUp" class="btn btn-primary" type="submit" name="submitType" value="SignUp">Enroll the user</button>
        </div>

        <div class="col-lg-12 col-lg-12 col-sm-12 col-12">
            <br />
        </div>
    </form>

}
