@model CuriousDriveWebClient.ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot Password - Curious Drive";
}
<div class="col-md-2 hidden-xs hidden-sm"></div>
<div class="col-md-8 col-xs-12">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <form name="loginForm" class="form-horizontal" role="form" novalidate>
            @Html.AntiForgeryToken()

            <div class="col-md-12 col-xs-12">
                <br />
            </div>

            <div class="col-md-12 hidden-sm hidden-xs card">
                <div class="col-md-12">
                    <h2><b>Curious Drive</b></h2>
                    <h4>
                        Please enter your Curious Drive email address to reset your password.
                    </h4>
                    <hr />
                </div>
                
                <div class="col-md-12">

                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.emailAddress, new { placeholder = "email address", @class = "form-control" })
                    </div>

                    <div class="col-md-12">
                        <br />
                    </div>

                    <div class="col-md-10">
                        <button id="signUp" class="btn btn-primary" type="submit" name="submitType" value="SignUp">Submit</button>
                    </div>
                    <div class="col-md-12">
                        <br />
                    </div>
                </div>
            </div>

        </form>
    }
</div>

<div class="col-md-2 hidden-xs hidden-sm"></div>
